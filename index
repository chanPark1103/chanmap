    <script src="https://cdn.tailwindcss.com"></script>
    <!-- [ì˜¤ë¥˜ í•´ê²°!] ì¹´ì¹´ì˜¤ë§µ API ë¡œë“œ ì‹œ autoload=false ì˜µì…˜ì„ ì¶”ê°€í•˜ì—¬, ìŠ¤í¬ë¦½íŠ¸ ì‹¤í–‰ ìˆœì„œ ë¬¸ì œë¥¼ í•´ê²°í•©ë‹ˆë‹¤. -->
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=813478df5f3bb1453679d63a8f78c1f1&libraries=services,clusterer,drawing&autoload=false"></script>
    <style>
        #map { width: 100%; height: 100%; }
        .active-filter { background-color: #2563eb; color: white; font-weight: bold; }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="flex h-screen">
        <!-- ì‚¬ì´ë“œë°” -->
        <aside class="w-64 bg-white p-6 shadow-lg flex flex-col z-10">
            <h1 class="text-2xl font-bold text-gray-800 mb-2">ìš°ë¦¬ë™ë„¤ ì•ˆì‹¬ì§€ë„</h1>
            <h2 class="text-lg font-semibold text-blue-600 mb-6">ê´€ì•…êµ¬í¸</h2>
            <nav class="space-y-3">
                <button id="filter-disabled" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">â™¿ ì¥ì• ì¸</button>
                <button id="filter-elderly" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">ğŸ§“ ë…ê±°ë…¸ì¸</button>
                <button id="filter-recipient" class="w-full text-left p-3 rounded-lg hover:bg-gray-200 transition-colors filter-btn">ğŸ  ê¸°ì´ˆìƒí™œìˆ˜ê¸‰ì</button>
            </nav>
            <div class="mt-auto pt-6 border-t">
                 <p class="text-sm text-gray-600">ë°ì´í„°ë¥¼ ìˆ˜ì§‘í•˜ì—¬ ì§€ë„ë¥¼ ì±„ì›Œì£¼ì„¸ìš”.</p>
            </div>
        </aside>
        <!-- ì§€ë„ ì˜ì—­ -->
        <main class="flex-1">
            <div id="map"></div>
        </main>
    </div>
    <script>
        // --- ë°ì´í„°ë² ì´ìŠ¤ (ì´ ë¶€ë¶„ì€ ë‚˜ì¤‘ì— ì‹¤ì œ ë°ì´í„°ë¡œ ì±„ì›Œì£¼ì„¸ìš”) ---
        const locations = {
            disabled: [{ name: 'ëŠ˜í‘¸ë¥¸ ì¥ì• ì¸ ë³µì§€ê´€', lat: 37.47951, lng: 126.94125 }, { name: 'í¬ë§ ì¬í™œ ì„¼í„°', lat: 37.47213, lng: 126.95581 }],
            elderly: [{ name: 'ìƒë¡ìˆ˜ ë…¸ì¸ ë³µì§€íšŒê´€', lat: 37.48512, lng: 126.95888 }, { name: 'íš¨ì‚¬ë‘ ê²½ë¡œë‹¹', lat: 37.47545, lng: 126.92921 }],
            recipient: [{ name: 'ê´€ì•…êµ¬ì²­ (ì£¼ë¯¼ì„¼í„°)',  lat: 37.47824, lng: 126.95156 }]
        };
        const dangerZonePathData = [ {lat: 37.4760, lng: 126.9420}, {lat: 37.4775, lng: 126.9460}, {lat: 37.4750, lng: 126.9480}, {lat: 37.4735, lng: 126.9440} ];

        // --- ì§€ë„ ë¡œì§ ---
        let map, currentMarkers = [], currentPolygon = null, currentInfowindow = null, activeFilter = null;

        // [ì˜¤ë¥˜ í•´ê²°!] kakao.maps.load()ë¥¼ ì‚¬ìš©í•˜ì—¬ APIê°€ ì™„ì „íˆ ë¡œë“œëœ í›„ ì§€ë„ ê´€ë ¨ ì½”ë“œë¥¼ ì‹¤í–‰í•©ë‹ˆë‹¤.
        kakao.maps.load(function() {
            const mapContainer = document.getElementById('map');
            const mapOption = { center: new kakao.maps.LatLng(37.4782, 126.9515), level: 5 };
            map = new kakao.maps.Map(mapContainer, mapOption);

            document.querySelectorAll('.filter-btn').forEach(button => {
                const filterType = button.id.replace('filter-', '');
                button.addEventListener('click', () => {
                    if (activeFilter === filterType) {
                        clearAll();
                        button.classList.remove('active-filter');
                        activeFilter = null;
                    } else {
                        displayData(filterType);
                        activeFilter = filterType;
                    }
                });
            });
        });
        
        function clearAll() {
            currentMarkers.forEach(marker => marker.setMap(null));
            currentMarkers = [];
            if (currentPolygon) currentPolygon.setMap(null);
            if (currentInfowindow) currentInfowindow.close();
        }
        
        function displayData(filterType) {
            clearAll();
            document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active-filter'));
            document.getElementById(`filter-${filterType}`).classList.add('active-filter');
            locations[filterType].forEach(loc => {
                const position = new kakao.maps.LatLng(loc.lat, loc.lng);
                const marker = new kakao.maps.Marker({ map: map, position: position, title: loc.name });
                currentMarkers.push(marker);
                const infowindow = new kakao.maps.InfoWindow({ content: `<div style="padding:5px;font-size:12px;">${loc.name}</div>`, removable: true });
                kakao.maps.event.addListener(marker, 'click', function() {
                    if (currentInfowindow) currentInfowindow.close();
                    infowindow.open(map, marker);
                    currentInfowindow = infowindow;
                });
            });
            if (filterType === 'disabled') {
                const polygonPath = dangerZonePathData.map(p => new kakao.maps.LatLng(p.lat, p.lng));
                currentPolygon = new kakao.maps.Polygon({
                    path: polygonPath,
                    strokeWeight: 3, strokeColor: '#FF0000', strokeOpacity: 0.8,
                    strokeStyle: 'longdash', fillColor: '#FF0000', fillOpacity: 0.3
                });
                currentPolygon.setMap(map);
            }
            if (locations[filterType].length > 0) {
                 map.panTo(new kakao.maps.LatLng(locations[filterType][0].lat, locations[filterType][0].lng));
            }
        }
    </script>
</body>
